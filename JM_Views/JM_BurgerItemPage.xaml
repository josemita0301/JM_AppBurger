<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:JM_AppBurger.JM_Models"
             x:Class="JM_AppBurger.JM_Views.JM_BurgerItemPage"
             Title="JM_BurgerItemPage">
    <ScrollView>
        <VerticalStackLayout Padding="20"
 Spacing="10"
VerticalOptions="StartAndExpand">
            <Label Text="Nombre" />
            <Entry x:Name="nameB" Text="{Binding Name}" />
            <Label Text="Descripción" />
            <Entry x:Name="descB" Text="{Binding Description}" />
            <Label Text="¿Con queso extra?" />
            <CheckBox x:Name="check"
                      CheckedChanged="JM_OnCheckBoxCheckedChanged" />
            <Button Text="Guardar"
                    Clicked="JM_OnSaveClicked" />
            <Button Text="Cancelar"
                    Clicked="JM_OnCancelClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>